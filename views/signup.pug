html 
  include partials/_head.pug
body
  div.signup
    section.signup__form
       h1= "Register"
       form(action="/signup" method="POST" class="signup__form")
         p Email:
         input(type="email" name="email" placeholder="")
         p First Name:
         input(type="text" name="firstName" placeholder="")
         p Last Name:
         input(type="text" name="lastName" placeholder="")
         p Password:
         input(type="password" name="password" placeholder="")
         p Confirm Password:
         input(type="password" name="confirmPassword" placeholder="")
         input.navbutton.signup__button(type="submit" value='Register')
    img(class="signup__img" src="assets/signup__hero.webp", alt="", srcset="")
    include partials/_footer.pug