include partials/_head.pug
html 
  head
  body
    h1 Search a student 
    form(action="/student/searchStudent" method="GET")
      p ID Number
        input(type="text" name="ID" placeholder="")
      input(type="submit", value="Search!")

    h1 Full Name: #{name}
    h2(class='ID') ID Number: #{ID} 
    h2 Grade: #{grade} 
    h3 Primary Exceptionality: #{primary}
    h1 Goal History: 
    if history
      ul 
        h3 Kindergarten 
        for goal in history[0]
          div.goal__container
            div.goal__information
              h4 Domain
              span= goal.goal.domain
            div.goal__information
              h4 Text
              span= goal.goal.text
            div.goal__information
              h4 Succeed
              if goal.goal.succeed === true
                span.green= goal.goal.succeed
              else
                span.red= goal.goal.succeed
            div.goal__information
              h4 Notes
              span= goal.goal.notes
        h3 First
        for goal in history[1]
          div.goal__container
            h4 Domain
            span= goal.goal.domain
            h4 Text
            span= goal.goal.text
            h4 Succeed
            span= goal.goal.succeed
            h4 Notes
            span= goal.goal.notes
        h3 Second
        for goal in history[2]
          div.goal__container
            h4 Domain
            span= goal.goal.domain
            h4 Text
            span= goal.goal.text
            h4 Succeed
            span= goal.goal.succeed
            h4 Notes
            span= goal.goal.notes
        h3 3
        h3 4
        h3 5
        h3 6
        h3 7
        h3 8
        h3 9
        h3 10
        h3 11
        h3 12
        h3 Post
    a(href="/student/addNewStudent") Add a new student
    script(src="../js/student.js") 
