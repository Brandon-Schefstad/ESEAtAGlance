html 
  head
  body
    h2 History
    form(action="/student/addGoals" method="POST")
      p ID Number:
        input(type="text" name="ID" placeholder="")
      p What grade is this goal for?
        br
        select(name="goalGrade")
          option(value="GradeK") Kindergarten 
          option(value="Grade1") 1st Grade 
          option(value="Grade2") 2nd Grade 
          option(value="Grade3") 3rd Grade 
          option(value="Grade4") 4th Grade 
          option(value="Grade5") 5th Grade 
          option(value="Grade6") 6th Grade 
          option(value="Grade7") 7th Grade 
          option(value="Grade8") 8th Grade 
          option(value="Grade9") 9th Grade 
          option(value="Grade10") 10th Grade 
          option(value="Grade11") 11th Grade 
          option(value="Grade12") 12th Grade 
          option(value="Grade13") Other 
      h3 Goal1
      p Domain:
        select(name="domain")
          option(value="curriculum") Curriculum and Learning Environment
          option(value="socialEmotional") Social/Emotional
          option(value="independentFunctioning") Independent Functioning
          option(value="healthcare") Healthcare
          option(value="communication") Communication
      p Text:
        input(type="text" name="goalText" placeholder="")
      p Succeed
        input(type="checkbox" name="succeed" placeholder="")
      p Notes:
        input(type="text" name="notes" placeholder="")
      input(type="submit", value="Submit Goal")
      br
      a(href="/dashboard") Back to Dashboard 

script(src="../js/main.js") 