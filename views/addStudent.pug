html
  head
    title ESE-At-A-Glance
    link(rel="stylesheet", href="../../css/output.css")
    script(src="https://kit.fontawesome.com/a0bcd08329.js" crossorigin="anonymous")
    link(rel="icon", href="/assets/favicon.png")
  body.bg-secondary(class="max-w-[2200px] ").m-auto.text-accent.h-screen
    include partials/_nav.pug
    section.mt-6
      h1.text-3xl.mb-12.text-neutral.text-center Add New Student
      form(action="/student/addNewStudent" method="POST" enctype="multipart/form-data" class=" bg-base-100 text-accent mx8 w-full grid gap-2 grid-cols-2 px-10 py-10  md:w-auto md:px-12 md:gap-16 lg:gap-12 md:w-5/6 md:m-auto lg:w-3/4 lg:m-auto text-lg md:text-xl lg:text-2xl lg:p-6 xl:w-1/2 xl:p-12 xl:m-auto")
        p First Name:
        input( class="px-2" type="text" name="firstName" placeholder="")
        p Last Name:
        input(class="px-2" type="text" name="lastName" placeholder="")
        p ID Number:
        input(class="px-2" type="number" name="ID" placeholder="")
        p Grade:
        input(class="px-2" type="number" name="grade" placeholder="")
        p Primary Exceptionality:
        input(class="px-2" type="text" name="primary" placeholder="")
        p IEP Due Date:
        input(class="px-2" type="date" name="IEP" placeholder="")
        p Image
        label(for="imageUpload" class="form-label")
          input(class="px-2" type="file" class="form-control" id="imageUpload" name="file")
        input.mt-12.col-span-2(type="submit" value="Submit" class="btn btn-accent text-neutral") 
include partials/_footer.pug