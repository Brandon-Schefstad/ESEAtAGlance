html 
  include partials/_head.pug
  body
    include partials/_nav.pug
    section.addStudent__wrapper
      h1.addStudent__title Add New Student
      form(action="/student/addNewStudent" method="POST" class="addStudent__form")
        p First Name:
        input(type="text" name="firstName" placeholder="")
        p Last Name:
        input(type="text" name="lastName" placeholder="")
        p ID Number:
        input(type="number" name="idNumber" placeholder="")
        p Grade:
        input(type="number" name="grade" placeholder="")
        p Primary Exceptionality:
        input(type="text" name="primary" placeholder="")
        input(type="submit" value="Submit" class="submit__btn") 
      include partials/_footer.pug